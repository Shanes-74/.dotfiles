@import "colors.rasi"

* {
    background-color: transparent;
}

/* ───────── Window ───────── */

window {
    width:            50%;
    transparency:     "real"; 
    background-color: #00000050; 
    border:           6px;                  /* pseudo-sombra */
    border-color:     #00000040;          /* preto semi-transparente */
    border-radius:    22px;                 
    font:             "Google Sans Display Medium 14";
}

/* ───────── Layout ───────── */

mainbox {
    background-color: @surface-container-high;
    border:           1px;
    border-color:     @outline-variant;
    border-radius:    20px;
    margin:           -1px; 
    padding:          20px;
    children:         [inputbar, message, listview]; 
    spacing:          15px; 
}

/* ───────── Input ───────── */

inputbar {
    border:           1px; 
    border-color:     @outline-variant;
    border-radius:    999px; 
    margin:           4px; 
    padding:          15px;
    /* Cor mais clara para criar contraste de profundidade (esmaecimento) */
    background-color: @surface-container-highest;
    children:         [prompt, textbox-prompt-colon, entry]; 
}

/* Prompt fixo com : e cor @primary */
prompt {
    text-color: @primary;
    background-color: transparent;
}

textbox-prompt-colon {
    expand:           false; 
    str:              ": "; 
    text-color:       @on-surface-variant;
    background-color: transparent;
}

entry {
    cursor-color:     @primary;
    placeholder-color:@on-surface-variant;
    background-color: transparent;
    placeholder:      "Selecione um Wallpaper 1, 2, ...";
    text-color:       @on-surface;
}

/* ───────── Grid ───────── */

listview {
    columns:          4;
    lines:            1;
    spacing:          20px;
    scrollbar:        false;
    background-color: transparent;
}

/* ───────── Element ───────── */

element {
    orientation:      vertical;
    padding:          8px;
    spacing:          6px;
    border-radius:    20px;
    background-color: transparent;

    /* REMOVE highlight padrão */
    highlight:        none;
}

/* ───────── Image ───────── */

element-icon {
    size:             280px;
    horizontal-align: 0.5;
    border-radius:    20px;
    background-color: transparent;
}

/* ───────── Text (remove “barra”) ───────── */

element-text {
    enabled:          false;
}

/* ───────── States (igual ao teu tema base) ───────── */

element normal normal {
    background-color: transparent;
    text-color:       @on-surface;
}

element selected normal {
    background-color: @primary;
    text-color:       @on-primary;
    border-radius:    20px;
}
