#!/usr/bin/env bash

# ───────── Toggle Instantâneo ─────────
if pgrep -x hyprsunset > /dev/null; then
    killall hyprsunset
    # Ícone de "Sol" ou brilho para indicar que a luz noturna saiu
    swayosd-client --custom-icon="display-brightness-symbolic" --custom-message="Luz noturna: Off"
else
    # Ajuste a temperatura conforme sua preferência
    hyprsunset -t 3800 & disown
    # Ícone de "Lua" para indicar modo noturno ativo
    swayosd-client --custom-icon="night-light-symbolic" --custom-message="Luz noturna: On"
fi
