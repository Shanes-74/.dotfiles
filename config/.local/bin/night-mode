#!/usr/bin/env bash

if pgrep -x hyprsunset >/dev/null; then
    pkill hyprsunset

    swayosd-client \
      --custom-icon="display-brightness-symbolic" \
      --custom-message="Luz noturna: Off"
else
    setsid hyprsunset -t 4000 >/dev/null 2>&1 &

    swayosd-client \
      --custom-icon="night-light-symbolic" \
      --custom-message="Luz noturna: On"
fi
