#!/usr/bin/env bash

# ───────── Toggle ─────────
if pgrep -x hyprsunset > /dev/null; then
    killall hyprsunset
    swayosd-client --custom-message="Luz noturna: Off" --custom-icon="night-light-symbolic"
else
    # Ajuste a temperatura conforme sua preferência
    hyprsunset -t 5200 & disown
    swayosd-client --custom-message="Luz noturna: On" --custom-icon="night-light-symbolic"
fi