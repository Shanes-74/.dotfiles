#!/usr/bin/env bash

BASE_DIR="$HOME/Imagens/Wallpapers"
SCRIPT="$HOME/.config/scripts/wall_menu.sh"

[ -d "$BASE_DIR" ] || exit 1
[ -x "$SCRIPT" ] || exit 1

selection=$(find "$BASE_DIR" -mindepth 1 -maxdepth 1 -type d \
  -printf "%f\n" \
  | sort \
  | rofi -dmenu -p "Wallpaper folders"
  )

[ -z "$selection" ] && exit 0

exec "$SCRIPT" "$BASE_DIR/$selection"
